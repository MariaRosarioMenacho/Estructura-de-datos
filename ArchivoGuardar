#include <iostream>
#include <fstream>
#include <string>

using namespace std;

class Registro {
private:
    string nombre;
    int edad;
public:
    Registro(string nombre, int edad) : nombre(nombre), edad(edad) {}

    void guardarRegistro(ofstream &archivo) {
        archivo << nombre << " " << edad << endl;
    }
};

int main() {
    string nombreArchivo = "registros.txt";
    ofstream archivo(nombreArchivo, ios::app);

    if (!archivo.is_open()) {
        cout << "Error al abrir el archivo." << endl;
        return 1;
    }

    string nombre;
    int edad;
    char opcion;

    do {
        cout << "Ingrese nombre: ";
        cin >> nombre;
        cout << "Ingrese edad: ";
        cin >> edad;

        Registro nuevoRegistro(nombre, edad);
        nuevoRegistro.guardarRegistro(archivo);

        cout << "Â¿Desea agregar otro registro? (s/n): ";
        cin >> opcion;
    } while (opcion == 's' || opcion == 'S');

    archivo.close();
    cout << "Registros agregados correctamente." << endl;

    return 0;
}

